{
  "name": "patterm",
  "version": "1.0.0",
  "description": "Professional Serial Terminal Application",
  "main": "src/main/main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\"",
    "dev:main": "electron src/main/main.js",
    "dev:renderer": "wait-on http://localhost:3000 && electron .",
    "build": "npm run build:renderer && npm run build:main",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "dist:mac": "electron-builder --mac",
    "dist:linux": "electron-builder --linux"
  },
  "keywords": [
    "serial",
    "terminal",
    "uart",
    "rs232",
    "com-port"
  ],
  "author": "Patterm Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^35.7.5",
    "electron-builder": "^24.9.1",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "serialport": "^12.0.0",
    "@serialport/parser-readline": "^12.0.0",
    "@serialport/parser-delimiter": "^12.0.0"
  },
  "build": {
    "appId": "com.patterm.app",
    "productName": "Patterm",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "public/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}